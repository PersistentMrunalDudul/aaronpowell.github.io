{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run server",
            "type": "shell",
            "command": "./run.ps1",
            "problemMatcher": [],
            "windows": {
                "options": {
                    "shell": {
                        "executable": "powershell.exe"
                    }
                }
            }
        },
        {
            "label": "new post",
            "type": "shell",
            "command": "./New-Post.ps1",
            "args": ["-Title", "${input:postName}"],
            "windows": {
                "options": {
                    "shell": {
                        "executable": "powershell.exe"
                    }
                }
            },
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "postName",
            "description": "Name of a new post",
            "type": "promptString",
            "default": ""
        }
    ]
}